{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "removeComments": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "undici-types": [
                "./node_modules/undici-types/index.d.ts"
            ],
        },
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/**/*.ts",
    ],
}